    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "launch",
            "target": "./step-3-uart/firmware.elf",
            "cwd": "${workspaceRoot}",
            "gdbpath": "C:\\MinGW\\bin\\gdb.exe",
            "valuesFormatting": "parseText",
            "autorun": [
                "target extended-remote localhost:3333",
                "symbol-file ./step-3-uart/firmware.elf",
                "break main"
            ]
        }
    ]
}